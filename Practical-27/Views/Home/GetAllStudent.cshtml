@model IEnumerable<Core_Practical_17.Models.Student>

@{
    ViewData["Title"] = "GetAllStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student List</h1>

@if(User.IsInRole("Admin"))
{
<p>
    <a asp-action="AddStudent">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StandardId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
             <td>

                    @Html.ActionLink("Details","Details",new {id = item.StudentId})
                    @Html.ActionLink("Edit","Edit",new {id = item.StudentId})

                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete","Delete",new {id = item.StudentId} ,new{onclick ="return confirm('Are You Sure ?');"})
                    }
             </td>
        </tr>
}
    </tbody>
</table>
