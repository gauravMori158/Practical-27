
@{
    ViewData["Title"] = "AuthorisedPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Authorised   Page</h1>


@if (User.Identity.IsAuthenticated)
{
        <table class="table table-bordered">
        @foreach (var claim in User.Claims)
        {
                    <tr> 
                        <td>
                    @claim.Type
                        </td>
                        <td>
                    @claim.Value
                        </td>
                    </tr>
        }

        </table>

}